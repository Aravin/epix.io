{
  "hosting": [
    {
      "site": "api-v1-epix",
      "public": "api/dist",
      "rewrites": [
        {
          "source": "**",
          "destination": "api"
        }
      ]
    }
  ],
  "functions": {
    "source": "api",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  }
}
